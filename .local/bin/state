#!/usr/bin/env bash

set -o pipefail

general=(
	# state dirs
	.mozilla/firefox/profile
	.local/share/nvim/{shada,undo,swap}
	.local/share/zathura
	.config/mpv/watch_later

	# state files
	.local/share/fish/fish_history
	.local/share/gdb/history
	.ipython/profile_default/history.sqlite
	"$(readlink .wallpaper)"

	# secret files
	.ssh/hosts
	.local/share/keyrings/login.keyring

	# ordinary files
	archive
	backup
	fit
	media
	projects
	media/books
	media/documents
	media/inspiration
	media/music
	media/screenshots
	media/wallpapers
	sync
)

machine=(
	# machine specific dirs
	.config/syncthing/config.xml
	.config/transmission-daemon
	.stfolder

	# machine specific files
	.config/pulse/default.pa
)

rsync_flags=(--archive --relative --delete --itemize-changes)

: ${host:="$(hostname)"}
: ${subdir:=""}
: ${remote:="${host}_phone:"}

cd
destination="."

push_files() {
	echo PUSH "$@"
	declare set="$1"
	declare -n files="$2"
	rsync "${rsync_flags[@]}" "${files[@]}" "$remote$set/./"
}

pull_files() {
	echo PULL "$@"
	declare set="$1"
	declare -n files="$2"
	rsync "${rsync_flags[@]}" "${files[@]/#/"$remote$set/./"}" "$destination"
}

cd

while getopts :np opt; do
	case "$opt" in
	n) rsync_flags+=(--dry-run) ;;
	p) rsync_flags+=(--info=progress2) ;;
	\?) echo "invalid option '-$OPTARG'"; exit 1 ;;
	esac
done
shift $(( OPTIND - 1 ))

case "$1" in
push)
	push_files general general
	push_files "$host" machine
;;
pull)
	pull_files general general
	pull_files "$host" machine
;;
esac
